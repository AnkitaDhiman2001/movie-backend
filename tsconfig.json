{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src", 
    "paths": {
      "@controllers/*": [
        "controllers/*"
      ] 
    }
  },
  "include": [
    "src",
  ]
}